!!!
%html
  %head
    %title
      Not Untitled
    %link{:href=>"/rss/", :rel=>"alternate", :title=>"RSS", :type=>"application/rss+xml",}
    %link{:rel=>"stylesheet", :href=>"http://notuntitled.com/stylesheets/blog.css"} 
    :javascript
      var images=#{array};
      var index = #{image_index};
      function next_image(){
        index=index+1;
        
        if(index>images.length-1){
          index=0;
          }
            
        var image=images[index];
        var nextimg=images[index+1];
        document.getElementById("slide").src="#{url}"+image;
        document.getElementById("next").src="#{url}"+nextimg;
      }
      
      function previous(){
        index=index-1;
        if(index<0){ 
          index=images.length-1; 
          }
        var image=images[index];
        var nextimg=images[index+1];
        document.getElementById("slide").src="#{url}"+image;
        document.getElementById("next").src="#{url}"+nextimg;
      }
  %body
    #page
      #content
        #header
          #top
            %a{:href=>"http://notuntitled.com", :class=>"title"}
              Not Untitled
          #bottom
            #desc
              My name is Matt Mills. These are my photos.
            .buttons
              %a{:href=>"mailto:sunrisetimes@gmail.com", :class=>"button"}
                email me
              &nbsp;&nbsp;&nbsp;&nbsp;
              %a{:href=>"http://notuntitled.com/rss", :class=>"button"}
                RSS
              &nbsp;&nbsp;&nbsp;&nbsp;
              %a{:href=>"http://notuntitled.com", :class=>"button"}
                Archive
        #main
          #content-wrapper
            .content
              %br
              .center
                %img{:src=>"http://photomattmills.com/images/#{path}/#{image}", :id=>"slide",  :onclick=>"next_image()", :alt=>"Photos"}
                %img{:src=>"http://photomattmills.com/images/#{path}/#{images[image_index+1]}", :id=>"next", :style=>"border: 0pt none; width: 0pt; height: 0pt;" }
                %br
                %span{:style=>"text-align:left;font-size:300%;"}
                  %a{:onclick=>"previous()", :style=>"cursor: pointer;"}
                    << Back
                  &nbsp;&nbsp;||&nbsp;&nbsp;
                  %a{:onclick=>"next_image()", :style=>"cursor: pointer;"}
                    Forward >>
                %br
              #thumbnails{:style => "margin: 0 auto;"}
                -thumbnails.each do |thumb|
                  #container{:style => "float: left; width: 100px; height: 100px;margin: 10px; text-align:center;"}
                    #thumb{:style => "float: left; width: 100px; height: 100px; margin: auto; text-align:center;"}
                      %a{:href=>"http://galleries.notuntitled.com/#{path}/#{thumb.sub(".png",".jpg")}"}
                        %img{:src=>"http://photomattmills.com/images/#{path}/thumbnails/#{thumb}", :style=>"border: 0pt none;"}
              #clear{:style => "width: 968px"}
              #folders
                -if folders
                  -folders.each do |folder|
                    %a{:href => "http://galleries.notuntitled.com/#{folder}"}="#{folder}"
                    %br
        %br
        %br
           
        #footer{:style=>"width: 968px"}
          #p
            Copyright &copy; 2010-2013, Matt Mills. All rights reserved.
            #br